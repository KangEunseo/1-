import java.util.*;

class Scan_hw6 {
 public static void main(String ar[]) {
	 Scanner sc=new Scanner(System.in);
	 System.out.print("100 이하의 자연수 n을 입력하세요. : ");
	 int n=sc.nextInt();
	 int sum=0;

	 if(n<=100){
		  for(int i=1;i<=n;i++){
			  sum+=i;
		  }
		  System.out.println("1부터 입력한 자연수까지의 평균은 "+sum/n+"입니다");
	 }
	 else{
		 System.out.println("잘못 입력");
	 }
 }
}